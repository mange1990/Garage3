@model VehicleAddViewModel
@inject IVehicleTypeDropdown dropdown

@{
    ViewData["Title"] = "Add";
}


<h1 class="bg-info border rounded-lg font-italic text-light p-4">ADD NEW VEHICLE</h1>
<div class="btn-group col-sm-6 col mr-5">
    <a class="btn btn-dark "  asp-controller="VehicleTypes" asp-action="Add">CREATE NEW VEHICLE TYPE</a>
</div>
<hr />


<div class="row">
    <div class="col-md-4">
        <form asp-action="Add">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="from-group">
                <select asp-for="VehicleTypeId" asp-items="@dropdown.GetSelectList()" class="form-control">
                    <option selected="selected" value="">Vehicle Type</option>
                </select>
            </div>
            @*<div class="form-group">
                    <label asp-for="VehicleTypeId" class="control-label"></label>
                    <select asp-for="VehicleTypeId" class="form-control" asp-items="ViewBag.VehicleTypeId"></select>
                </div>*@
            <div class="form-group">
                <label asp-for="Wheels" class="control-label"></label>
                <input asp-for="Wheels" class="form-control" />
                <span asp-validation-for="Wheels" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegistrationNumber" class="control-label"></label>
                <input asp-for="RegistrationNumber" class="form-control" />
                <span asp-validation-for="RegistrationNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Manufacturer" class="control-label"></label>
                <input asp-for="Manufacturer" class="form-control" />
                <span asp-validation-for="Manufacturer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Color" class="control-label"></label>
                <input asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VehicleModel" class="control-label"></label>
                <input asp-for="VehicleModel" class="form-control" />
                <span asp-validation-for="VehicleModel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-info" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="text-info">BACK TO THE LIST</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
