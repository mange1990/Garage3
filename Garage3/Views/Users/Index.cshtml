@model IEnumerable<UserListViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Add">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VehicleCount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VehicleCount)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="text-info">EDIT</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="text-info">DETAILS</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="text-info">CHECKOUT</a>
                    <a asp-controller="Vehicles" asp-action="Add" asp-route-id="@item.Id" class="text-info">Add Vehicle</a>
                </td>
            </tr>
        }
    </tbody>
</table>
