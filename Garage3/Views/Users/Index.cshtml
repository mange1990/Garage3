<div class="btn-group col-sm-6 col mr-4">
    <a class="btn btn-dark " asp-controller="Users" asp-action="Add">NEW USER</a>
</div>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VehicleCount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VehicleCount)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="text-info">EDIT</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="text-info">DETAILS</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="text-info">DELETE</a> |
                    <a asp-controller="Vehicles" asp-action="Add" asp-route-id="@item.Id" class="btn-outline-dark">ADD VEHICLE</a>
                </td>
            </tr>
        }
    </tbody>
</table>
